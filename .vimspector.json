{
"$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json#",
"adapters":{
    "vscode-cpptools": {
      "attach": {
        "pidProperty": "processId",
        "pidSelect": "ask"
      },
      "command": [
        "${gadgetDir}/vscode-cpptools/debugAdapters/OpenDebugAD7"
      ],
      "name": "cppdbg"
    }
  },

  "configurations": {
    "vscode-cpptools: Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/build/vlkdemo",
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "logging": {
          "engineLogging": true
        },
        "stopAtEntry":true
      },
      "breakpoints": {
        "exception": {
          "caught": "",
          "uncaught": "Y"
      }
    }
}
  
}
}
